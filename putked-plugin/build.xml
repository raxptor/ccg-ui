<project name="com.rarh.ccg-ui" default="dist" basedir=".">
    <description>
    CCGUI Plugin
    </description>
    
  <property name="build" location="build"/>
  <property name="dist"  location="dist"/>

  <target name="init">
    <tstamp/>
    <mkdir dir="${build}"/>
  </target>

  <target name="compile" depends="init">
    <javac destdir="${build}" includeantruntime="false">
    <classpath>
      <pathelement path="${classpath}" />
    </classpath>
    <src path="src" />
    <src path="../_gen/java" />
    </javac>
  </target>

  <target name="dist" depends="compile">
    <mkdir dir="${dist}" />
    <jar jarfile="${dist}/ccgui-plugin.jar" basedir="${build}"/>
  </target>

  <target name="clean">
    <delete dir="${build}"/>
    <delete dir="${dist}"/>
  </target>
</project>
